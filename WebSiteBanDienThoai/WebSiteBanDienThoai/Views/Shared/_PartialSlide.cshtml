@using WebSiteBanDienThoai.Core.Entity;
@using WebSiteBanDienThoai.Entity;
@{
    var unitofwork = new UnitOfWork(new QLBHDienThoaiEntities());
    List<TypeProduct> lst = unitofwork.TypeProduct.GetCategory();
}


<section class="bg-slide">
    <div class="container">
        <div class="col-sm-12 col-xs-12 hidden-lg hidden-md no-padding">
            <div class="verticalmenu" id="category-mobile">
                <h3 class="title_block">
                    <i class="fa fa-bars"></i><span>Danh mục</span>
                </h3>
                <div class="verticalcontent" style="display:none;min-height: 321px">
                    <ul class="list-child">

                        <li class="level-0">
                            <a href="#/collections/all">
                                Tất cả sản phẩm
                                <em class="open-close-1"></em>
                            </a>
                        </li>

                        <li class="level-0">
                            <a href="#/dien-thoai">
                                Apple
                                <em class="open-close-1"></em>
                            </a>

                            <a href="#/dien-thoai">
                                Sam sung
                                <em class="open-close-1"></em>
                            </a>

                            <a href="#/dien-thoai">
                                Oppo
                                <em class="open-close-1"></em>
                            </a>

                            <a href="#/dien-thoai">
                                Nokia
                                <em class="open-close-1"></em>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-2 hidden-sm hidden-xs no-padding">
            <div class="verticalmenu">
                <h3 class="title_block">
                    <i class="fa fa-bars"></i><span>Danh mục</span>
                </h3>
                <div class="verticalcontent" style="min-height: 321px">
                    @*@Html.Action(" PartialCategory", "Product")*@
                    <ul class="list-child">

                        <li class="level0 ">
                            @foreach (var item in lst.Take(8))
                            {
                                <a href="@Url.Action("Category","Product",new {@TypeProductID=item.TypeProductID })"><i class="fa fa-angle-right"></i> @item.TypeProductName</a>
                            }
                            <a href="/"><i class="fa fa-angle-right"></i> Tất cả sản phẩm </a> 
                        </li>
                       
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-10 col-sm-12 col-xs-12 no-padding">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/slideshow_image_1.png" alt="Los Angeles" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="~/Images/slideshow_image_2.png" alt="Chicago" style="width:100%;">
                    </div>

                    <div class="item"> 
                        <img src="~/Images/slideshow_image_3.png" alt="New york" style="width:100%;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
